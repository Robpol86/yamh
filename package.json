{
  "name": "yamh",
  "version": "2.0.0",
  "description": "Yet Another Multiple Highlight Chrome extension",
  "license": "BSD-2-Clause",
  "author": "Robpol86",
  "homepage": "https://github.com/Robpol86/yamh",
  "repository": {
    "type": "git",
    "url": "https://github.com/Robpol86/yamh.git"
  },
  "bugs": {
    "url": "https://github.com/Robpol86/yamh/issues"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern . --ext js --ext cjs --ext mjs --ext ts --ext svelte",
    "lint:fix": "pnpm run lint --fix",
    "test": "vitest --run --coverage",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@wxt-dev/i18n": "^0.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@playwright/test": "^1.52.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.15.16",
    "@vitest/coverage-v8": "^3.1.3",
    "@wxt-dev/module-svelte": "^2.0.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-svelte": "^3.5.1",
    "globals": "^16.0.0",
    "playwright": "^1.52.0",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.25.9",
    "svelte-check": "^4.1.5",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.3",
    "wxt": "^0.20.4"
  }
}
